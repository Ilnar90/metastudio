<li id="<%= feed_item.id %>">
  <%= gravatar_for(feed_item.user) %>
  <h5><%= feed_item.user.email %></h5>
  <span class="content"><%= feed_item.title %></span>
  <span class="content"><%= wrap(feed_item.content) %></span>
  <span class="timestamp">Posted <%= time_ago_in_words(feed_item.created_at) %> ago.</span>
  <em>
     <%= pluralize feed_item.reputation_for(:votes).to_i, "like" %>
  </em>
  <% if user_signed_in? && current_user == feed_item.user %>
    <div><%= link_to "Редактирование", edit_micropost_path(feed_item) %></div>
    <div><%= link_to "Удаление", feed_item, method: :delete, data: { confirm: "Вы уверены?" } %></div>
  <% else %>
    <div><%= link_to "like", vote_micropost_path(feed_item, type: "up"), method: "post" %></div>
  <% end %>
</li>