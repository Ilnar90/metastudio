<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<div class="row">
  <aside class="span4">
    <h2>Здравствуйте</h2>
    <section>
      <%= render 'shared/user_info' %>
    </section>
    <section>
      <%= render 'shared/micropost_form' %>
    </section>
  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
      <h3>Microposts <%= @user.microposts.count %></h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>